#!/bin/bash
# Runs Drake without Nailgun (needs an uberjar)
DRAKE_PATH=$0
if [[ -L $DRAKE_PATH ]]; then
  DRAKE_PATH=`readlink $0`
fi

DRAKE_HOME=${DRAKE_HOME-$(dirname $(dirname $DRAKE_PATH))}
echo "Using DRAKE_HOME: ${DRAKE_HOME}"

DRAKE_JAR=$DRAKE_HOME/drake.jar

if [[ ! -f $DRAKE_JAR ]]; then
  DRAKE_JAR=$DRAKE_HOME/target/drake.jar
fi

if [[ ! -f $DRAKE_JAR ]]; then
  echo ""
  echo "========= UBERJAR COMPILING ========="
  cd $DRAKE_HOME
  lein uberjar
  cd - > /dev/null
  echo "========= UBERJAR COMPILED =========="
  echo ""
fi

if [[ `which hadoop` ]]; then
  HADOOP_CLASSPATH=`hadoop classpath 2>/dev/null`
  HADOOP_VERSION=`hadoop version | head -1`
  echo $HADOOP_VERSION
else
  echo "Warning: hadoop client not found. HDFS related feature will not work correctly"
fi

if [[ `which drip` ]]; then
  drip -cp ${HADOOP_CLASSPATH}:${DRAKE_JAR} drake.core "$@"
else
  java -cp ${HADOOP_CLASSPATH}:${DRAKE_JAR} drake.core "$@"
fi
